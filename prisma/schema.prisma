generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  name     String
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  password String
  role     String
  photo    String?

  points Point[]

  @@map("users")
}

model Point {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  latitude  Float
  longitude Float
  name      String   @unique
  tipoLixo  String[]
  city      String
  state     String
  photo     String?

  createdBy   User   @relation(fields: [createdById], references: [id])
  createdById String @db.ObjectId

  @@map("points")
}
